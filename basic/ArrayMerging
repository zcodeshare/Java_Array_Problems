public class ArrayMerging {
    public static void main(String[] args) {
        int[] a = {1, 2};
        int[] b = {3, 4};
        int[] c = new int[a.length + b.length];

        int idx = 0;
        for (int num : a){
            c[idx++] = num;
        }
        for (int num : b){
            c[idx++] = num;
        }

        for(int num : c){
            System.out.print(num+" ");
        }
    }
}
