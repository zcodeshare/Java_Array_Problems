public class DiffMaxMin {
    public static void main(String[] args) {
        int[] arr = {10, 5, 20};
        int min = Integer.MAX_VALUE;
        int max = Integer.MIN_VALUE;

        for (int num : arr) {
            if (num > max){
                max = num;
            }
            if (num < min){
                min = num;
            }
        }
        System.out.println("Difference = " + (max - min));
    }
}
